$fg: #e0e0e0;
$dim: white;
$border: #1a1a1a;
$accent: #3be8ff;
$running: #6eff25ff;

Screen {
    background: transparent;
    color: $fg;
    layout: vertical;
}

Screen.-running {
    /* No global change needed, we target specific widgets */
}

#app-title {
    color: $accent;
    height: 6;
    content-align: center top;
    margin-bottom: 1;
}

